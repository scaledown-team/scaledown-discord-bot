# Discord Bot Token (from https://discord.com/developers/applications)
DISCORD_BOT_TOKEN=your-discord-bot-token-here

# ScaleDown API Key (from https://blog.scaledown.ai/blog/getting-started)
SCALEDOWN_API_KEY=your-scaledown-api-key-here

# OpenAI API Key (from https://platform.openai.com/api-keys)
OPENAI_API_KEY=your-openai-api-key-here

# Path to ScaleDown documentation folder (default: parent directory)
DOCS_PATH=../

# LLM model to use for generating answers
LLM_MODEL=gpt-4o

# Discord channel name for the bot (optional â€” bot works in any channel if not set)
BOT_CHANNEL_NAME=scaledown-support
